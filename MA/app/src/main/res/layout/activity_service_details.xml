<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/superior_white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Event Title -->
        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="@color/nonchalant_blue" />


        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnJoin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Join Event"
                android:backgroundTint="@color/dreadhead_blue" />

            <Button
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Chat"
                android:backgroundTint="@color/dreadhead_blue" />

            <Button
                android:id="@+id/btnPdf"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="PDF"
                android:backgroundTint="@color/dreadhead_blue" />
        </LinearLayout>

        <!-- Favorite Toggle -->
        <LinearLayout
            android:id="@+id/starContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"/>

        <ImageButton
            android:id="@+id/btnFavorite"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:background="@null"
            android:src="@drawable/ic_star" />


        <!-- Event Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvOrganizer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Organizer: John Doe"
                android:textSize="18sp"
                android:textColor="@color/nonchalant_blue" />

            <TextView
                android:id="@+id/tvAttendees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Attendees: 15 / 50"
                android:textSize="18sp"
                android:textColor="@color/nonchalant_blue" />

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Place: Venue XYZ"
                android:textSize="18sp"
                android:textColor="@color/nonchalant_blue" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start: 01/08/2025 10:00"
                android:textSize="18sp"
                android:textColor="@color/nonchalant_blue" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End: 01/08/2025 18:00"
                android:textSize="18sp"
                android:textColor="@color/nonchalant_blue" />

            <TextView
                android:id="@+id/tvEventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Type: Workshop"
                android:textSize="18sp"
                android:textColor="@color/nonchalant_blue" />
        </LinearLayout>

        <!-- Description -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/novi_sad_torquoise"
            android:padding="16dp"
            android:layout_marginBottom="32dp">
            <TextView
                android:id="@+id/labelDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/nonchalant_blue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/valueDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Service description goes here."
                android:textColor="@color/nonchalant_blue" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_corners"
            android:backgroundTint="@color/white" />

        <!-- Reviews Section -->
        <TextView
            android:text="Reviews"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/nonchalant_blue"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.myapplication.reviews.ReviewsSectionView
            android:id="@+id/reviewsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- Submit Review -->
    </LinearLayout>
</ScrollView>
