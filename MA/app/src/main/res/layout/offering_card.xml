<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:padding="16dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/superior_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/offering_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Title"
            android:textColor="@color/stillwater_black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="@font/inter_18pt_medium"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/offering_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/trumpshot"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/rounded_corners"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/offering_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="This is a brief description of the product. It provides essential details that help the user understand the product better."
                    android:textSize="16sp"
                    android:textColor="@color/stillwater_black"
                    android:fontFamily="@font/inter_18pt_regular"
                    android:gravity="center" />

                <Button
                    android:id="@+id/offering_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="More Information"
                    android:textColor="@color/superior_white"
                    android:backgroundTint="@color/dreadhead_blue"
                    android:fontFamily="@font/inter_18pt_medium"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
