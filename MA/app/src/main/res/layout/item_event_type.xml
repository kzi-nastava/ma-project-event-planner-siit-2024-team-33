<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@color/freaky_green"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tvEventTypeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Type Name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/dreadhead_blue"/>

    <TextView
        android:id="@+id/tvEventTypeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginTop="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnEditEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:backgroundTint="@color/novi_sad_torquoise"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btnActivateEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activate"
            android:backgroundTint="@color/novi_sad_torquoise"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"/>

        <Button
            android:id="@+id/btnDeactivateEventType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deactivate"
            android:backgroundTint="@color/chopped_red"
            android:textColor="@color/superior_white"
            android:layout_marginStart="8dp"/>
    </LinearLayout>
</LinearLayout>