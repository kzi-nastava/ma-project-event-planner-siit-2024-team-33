<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@color/superior_white"
    android:padding="16dp">

    <TextView
        android:id="@+id/confirmation_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Confirmation"
        android:textColor="@color/stillwater_black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/registration_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration Successful!\n\nThank you for registering with us!\n\nPlease check your email for a confirmation message. To activate your account, click the link provided in the email (but be careful, you only have 24 hours, after that the time for confirmation expires). If you donâ€™t see it in your inbox, be sure to check your spam or junk folder.\n\nIf you have any questions, feel free to reach out to our support team.\n\nWelcome aboard!"
        android:textColor="@color/stillwater_black"
        android:textSize="16sp"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp"/>

    <Button
        android:id="@+id/go_to_home_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to Home"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/freaky_green"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
