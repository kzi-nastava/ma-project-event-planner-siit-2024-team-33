<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/superior_white"
    tools:context=".HomePage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_marginTop="16dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/eventsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/inter_28pt_bold"
                android:gravity="bottom"
                android:text="TOP 5 EVENTS."
                android:textAlignment="gravity"
                android:textColor="@color/stillwater_black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/smallText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:fontFamily="@font/inter_28pt_bold"
                android:gravity="bottom"
                android:text="@string/topEventsDesc"
                android:textAlignment="gravity"
                android:textColor="@color/novi_sad_torquoise"
                android:layout_marginStart="25dp"
                android:textSize="20sp" />

            <!-- Event Cards Place -->
            <LinearLayout
                android:id="@+id/eventCardsPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
