<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/comment_card_background"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/superior_white"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: Title + Suspension Time -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reportTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Report Title"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/suspensionTimeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suspension: 0h"
                android:textColor="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/reportDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/reportedUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reported User: JohnDoe"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: johndoe@example.com" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/banUserButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ban"
                android:backgroundTint="#666A86" />

            <Button
                android:id="@+id/unbanUserButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Unban"
                android:backgroundTint="#92B6B1" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
