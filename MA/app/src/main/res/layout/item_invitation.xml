<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#FFF"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:backgroundTint="#E8DDB5">

    <TextView
        android:id="@+id/invitationTitle"
        android:textSize="18sp"
        android:textColor="#788AA3"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/invitationDescription"
        android:textSize="14sp"
        android:textColor="#555"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/invitationStatus"
        android:textSize="14sp"
        android:textColor="#788AA3"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnAcceptInvitation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:backgroundTint="#B2C9AB"
            android:textColor="#000"/>

        <Button
            android:id="@+id/btnDenyInvitation"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Deny"
            android:backgroundTint="#E88383"
            android:textColor="#000"
            android:layout_marginStart="8dp"/>

    </LinearLayout>
</LinearLayout>
