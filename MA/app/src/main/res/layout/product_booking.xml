<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/novi_sad_torquoise"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Book a Service"
            android:textColor="#f1f5f9"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Event Selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Event"
            android:textColor="#e0e7ff"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner_events"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

        <!-- Date Picker -->

        <!-- Time From -->

        <!-- Time To -->

        <!-- Duration note -->

        <!-- Submit button -->
        <Button
            android:id="@+id/button_book_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dreadhead_blue"
            android:padding="12dp"
            android:text="Buy product"
            android:textColor="#ffffff" />
    </LinearLayout>
</ScrollView>
