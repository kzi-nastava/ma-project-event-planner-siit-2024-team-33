<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8DDB5"
    tools:context=".EventPlannerActivityOptional">

  <TextView
      android:id="@+id/header_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Fill in the optional information"
      android:textColor="@color/stillwater_black"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginTop="24dp" />

  <TextView
      android:id="@+id/residency_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Residency"
      android:textColor="#1B1B1B"
      android:textSize="16sp"
      app:layout_constraintTop_toBottomOf="@id/header_text"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="24dp"
      android:layout_marginStart="16dp" />

  <EditText
      android:id="@+id/residency_input"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Enter your residency"
      android:backgroundTint="#1B1B1B"
      android:padding="8dp"
      app:layout_constraintTop_toBottomOf="@id/residency_label"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="8dp" />

  <TextView
      android:id="@+id/phone_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Phone Number"
      android:textColor="#1B1B1B"
      android:textSize="16sp"
      app:layout_constraintTop_toBottomOf="@id/residency_input"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginTop="16dp"
      android:layout_marginStart="16dp" />

  <EditText
      android:id="@+id/phone_input"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:hint="Enter your phone number"
      android:backgroundTint="#1B1B1B"
      android:padding="8dp"
      android:inputType="phone"
      app:layout_constraintTop_toBottomOf="@id/phone_label"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="8dp" />

  <LinearLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintTop_toBottomOf="@id/phone_input"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginHorizontal="16dp"
      android:layout_marginTop="24dp"
      android:layout_marginBottom="24dp">

    <Button
        android:id="@+id/previous_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Previous"
        android:backgroundTint="@color/freaky_green"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Confirm"
        android:backgroundTint="@color/freaky_green"
        android:textColor="#FFFFFF"
        android:padding="8dp" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
