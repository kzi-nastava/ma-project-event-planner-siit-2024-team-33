<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/superior_white"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="200dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/registration_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration Confirmation"
            android:textSize="28sp"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="@color/dreadhead_blue" />

        <LinearLayout
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/registration_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Successful!\n\nThank you for registering with us!\n\nPlease check your email for a confirmation message. To activate your account, click the link provided in the email (valid for 24 hours). If you donâ€™t see it in your inbox, check your spam or junk folder.\n\nWelcome aboard!"
                android:textAlignment="center"
                android:lineSpacingExtra="2dp"
                android:padding="8dp" />

            <Button
                android:id="@+id/button_go_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Go to Home"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/freaky_green"
                android:textColor="@color/black"
                android:padding="12dp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:minWidth="200dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>