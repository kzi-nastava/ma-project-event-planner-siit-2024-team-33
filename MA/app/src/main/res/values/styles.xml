<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PaginationButtonStyle">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">#007bff</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>
    <style name="sigmaColorText">
        <item name="android:textColor">@color/nonchalant_blue</item>
    </style>

    <style name="MyButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/dreadhead_blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">17dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="MyButton2" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/freaky_green</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">6dp</item>
    </style>


</resources>